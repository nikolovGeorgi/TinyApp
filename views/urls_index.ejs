<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>
    <main>
      <h2>The best Web Sites in the World Wide Web!</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Short URL</th>
            <th>Long URL</th>
            <th>Edit URL</th>
            <th>Delete URL</th>
            <th>Date Created</th>
            <th>Visits</th>
            <th>Unique Visits</th>
          </tr>
        </thead>
        <% for (var el in urlDatabase) {
          var longUrl = urlDatabase[el];
        %>
          <tr>
            <td><a href="/urls/<%= el %>"><%= el %></a></td>
            <td><a href="<%= longUrl %>"><%= longUrl %></a></td>
            <td>
              <form  method="post" action="/urls/<%= longUrl %>/edit">
                  <button type="submit" value="deleteKey" class="btn btn-warning btn-sm">Edit</button>
              </form>
            </td>
            <td>
              <form  method="post" action="/urls/<%= longUrl %>/delete">
                  <button type="submit" value="deleteKey" class="btn btn-warning btn-sm">Delete</button>
              </form>
            </td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        <% }; %>
      </table>
        <div class="jumbotron">
            <h2>This is great</h2>
            <p>Welcome to my Tiny App!</p>
        </div>
    </main>

    <footer>
        <% include ./partials/footer %>
    </footer>

</body>
</html>
