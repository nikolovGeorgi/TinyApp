                <button type="submit" value="editKey" class="btn btn-warning btn-sm">Edit</button>
              </label>
            </form>
          </td>
      </table>
      <% }; %>
<div class="jumbotron">
    <h2>This is great</h2>
    <p>Welcome to my Tiny App!</p>
</div>
</main>

<footer>
<% include footer %>
</footer>
<% }; %>
</body>
</html>
